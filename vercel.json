{
    "version": 2,
    "builds": [
        {
            "src": "./app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/app.py"
        }
    ],
    "env": {
        "PINECONE_API_KEY": "@pinecone_api_key",
        "PINECONE_INDEX_NAME": "@pinecone_index_name",
        "PINECONE_CLOUD": "@pinecone_cloud", 
        "PINECONE_REGION": "@pinecone_region",
        "GROQ_API_KEY": "@groq_api_key"
    },
    "functions": {
        "app.py": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "regions": ["iad1"]
}